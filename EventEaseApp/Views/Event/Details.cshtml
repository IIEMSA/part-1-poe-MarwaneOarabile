@model EventEaseApp.Models.Event

@{
    ViewData["Title"] = "Event Details";
}

<h1>@Model.EventName</h1>

<div>
    <strong>Event Date:</strong> @Model.EventDate.ToShortDateString()
</div>
<div>
    <strong>Description:</strong> @Model.Description
</div>

<!-- Fetch Venue Name using VenueID -->
<div>
    <strong>Venue:</strong> @ViewBag.VenueName
</div>

<p>
    <a asp-action="Edit" asp-route-eventid="@Model.EventID" class="btn btn-primary">Edit</a> |
    <a asp-action="Delete" asp-route-eventid="@Model.EventID" class="btn btn-danger">Delete</a> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</p>
