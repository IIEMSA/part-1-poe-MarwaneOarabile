@model EventEaseApp.Models.Event

@{
    ViewData["Title"] = "Delete Event";
}

<h1>Delete Event</h1>

<div>
    <strong>Event Name:</strong> @Model.EventName
</div>
<div>
    <strong>Event Date:</strong> @Model.EventDate.ToShortDateString()
</div>
<div>
    <strong>Description:</strong> @Model.Description
</div>

<!-- Fetch Venue Name using VenueID -->
<div>
    <strong>Venue:</strong> @ViewBag.VenueName
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="EventID" />
    <p>Are you sure you want to delete this event?</p>
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
